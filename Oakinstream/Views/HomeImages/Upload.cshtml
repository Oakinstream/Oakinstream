@model Oakinstream.Models.HomeImage

@{
    ViewBag.Title = "Upload";
}

<div class="container homeimages-container">
    <div class="row homeimages-header">
        <div class="col-md-12">
            <h1 class="text-primary"><span class="homeimages-title">@ViewBag.Title</span></h1>
        </div>
        <div class="btn">
            <a class="btn site-btn-back" href="@Url.Action("Index", "HomeImages")"><span class="glyphicon glyphicon-backward"></span> Back to List</a>
        </div>
    </div>

    <div class="jumbotron site-border-normal homeimages-jumbotron">
        @using (Html.BeginForm("Upload", "HomeImages", FormMethod.Post, new { enctype = "multipart/form-data" }))
        {
            @Html.AntiForgeryToken()

            <div class="row">
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <div class="col-md-3 text-right">
                    <h4 class="homeimages-text"><span class="glyphicon glyphicon-picture"></span>  @Html.LabelFor(model => model.FileName):</h4>
                </div>
                <div class="col-md-6 site-border-normal-left text-left">
                    <input type="file" name="files" id="files" multiple="multiple" class="site-form-file btn-default" accept=".png,.jpg,.jpeg,.gif" />
                    @Html.ValidationMessageFor(model => model.FileName, "", new { @class = "text-danger" })
                    <div class="row">
                        <div class="col-md-4 text-right">
                            <h4 class="homeimages-text"><span class="glyphicon glyphicon-header"></span> @Html.LabelFor(model => model.ImageHeader):</h4>
                        </div>
                        <div class="col-md-8 site-border-normal-left text-left">
                            @Html.EditorFor(model => model.ImageHeader, new { htmlAttributes = new { @class = "site-form" } })
                            @Html.ValidationMessageFor(model => model.ImageHeader, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-4 text-right">
                            <h4 class="homeimages-text"><span class="glyphicon glyphicon-text-size"></span> @Html.LabelFor(model => model.ImageCaption):</h4>
                        </div>
                        <div class="col-md-8 site-border-normal-left text-left">
                            @Html.EditorFor(model => model.ImageCaption, new { htmlAttributes = new { @class = "site-form" } })
                            @Html.ValidationMessageFor(model => model.ImageCaption, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-4 text-right">
                            <h4 class="homeimages-text"><span class="glyphicon glyphicon-link"></span> @Html.LabelFor(model => model.ImageLink):</h4>
                        </div>
                        <div class="col-md-8 site-border-normal-left text-left">
                            @Html.EditorFor(model => model.ImageLink, new { htmlAttributes = new { @class = "site-form" } })
                            @Html.ValidationMessageFor(model => model.ImageLink, "", new { @class = "text-danger" })
                        </div>
                    </div>
                </div>
                <div class="col-md-3 text-left">
                    <input type="submit" value="Add >>" class="btn btn-default site-form-height" />
                </div>
            </div>
        }
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
