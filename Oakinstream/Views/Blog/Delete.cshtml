@model Oakinstream.Models.Blog

@{
    ViewBag.Title = "Delete Blog Post";
}

<div class="container blog-CED-container">
    <div class="row blog-CED-header">
        <div class="col-md-12">
            <h1 class="text-primary"><span class="blog-CED-title">@ViewBag.Title</span></h1>
        </div>
        <div class="btn">
            <a class="btn blog-CED-btn-back" href="@Url.Action("Index", "Blog")"><span class="glyphicon glyphicon-backward"></span> Back to Blog</a>
        </div>
    </div>

    <div class="jumbotron blog-CED-jumbotron">
        <div class="row">
            <div class="blog-CED-jumbotron-delete">
                <h4 class="text-uppercase blog-CED-text" style="text-decoration:underline">@Html.DisplayNameFor(model => model.ID)</h4>
            </div>
            <div class="blog-CED-jumbotron-delete">
                <h4 class="text-uppercase blog-CED-text" style="text-decoration:underline">@Html.DisplayNameFor(model => model.Title)</h4>
            </div>
            <div class="blog-CED-jumbotron-delete">
                <h4 class="text-uppercase blog-CED-text" style="text-decoration:underline">@Html.DisplayNameFor(model => model.CreatedBy)</h4>
            </div>
            <div class="blog-CED-jumbotron-delete">
                <h4 class="text-uppercase blog-CED-text" style="text-decoration:underline">@Html.DisplayNameFor(model => model.CreatedDate)</h4>
            </div>
        </div>
        <hr />

        <div class="row">
            <div class="blog-CED-jumbotron-delete">
                <h6 class="text-uppercase blog-CED-text">@Html.DisplayFor(model => model.ID)</h6>
            </div>
            <div class="blog-CED-jumbotron-delete">
                <h6 class="text-uppercase blog-CED-text">@Html.DisplayFor(model => model.Title)</h6>
            </div>
            <div class="blog-CED-jumbotron-delete">
                <h6 class="text-uppercase blog-CED-text">@Html.DisplayFor(model => model.CreatedBy)</h6>
            </div>
            <div class="blog-CED-jumbotron-delete">
                <h6 class="text-uppercase blog-CED-text">@Html.DisplayFor(model => model.CreatedDate)</h6>
            </div>
        </div>
        <hr />

        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-actions no-color">
                <input type="submit" value="Delete" class="btn btn-danger site-btn-delete-big" />
            </div>
        }

    </div>
</div>
