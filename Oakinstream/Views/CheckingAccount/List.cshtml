@model IEnumerable<Oakinstream.Models.CheckingAccount>

@{
    ViewBag.Title = "Account List";
}

<div class="container checkingaccount-container">
    <div class="row checkingaccount-header">
        <div class="col-md-12">
            <h1 class="text-uppercase"><span class="checkingaccount-title">@ViewBag.Title</span></h1>
        </div>
        <div class="btn">
            <a class="btn checkingaccount-btn-back" href="@Url.Action("Index", "Admin")"><span class="glyphicon glyphicon-backward"></span> Back to admin</a>
        </div>
    </div>

    @if (Request.IsAuthenticated && User.IsInRole("Admin"))
    {
        <div class="btn">
            <a class="btn btn-success site-btn-create" href="@Url.Action("Create", "CheckingAccount")"><span class="glyphicon glyphicon-plus"></span></a>
        </div>
    }

    @{
        var itemcounter = 0;
        foreach (var item in Model)
        {
            itemcounter++;
        }
    }

    @if (itemcounter != 0)
    {
        <div class="jumbotron checkingaccount-jumbotron">

            <div class="row" style="background-color:black; color:white;">
                <div class="checkingaccount-jumbotron-list">
                    <h5 class="text-uppercase checkingaccount-text" style="text-decoration:underline">@Html.DisplayNameFor(model => model.User.Pin)</h5>
                </div>
                <div class="checkingaccount-jumbotron-list">
                    <h5 class="text-uppercase checkingaccount-text" style="text-decoration:underline">@Html.DisplayNameFor(model => model.AccountNumber)</h5>
                </div>
                <div class="checkingaccount-jumbotron-list">
                    <h5 class="text-uppercase checkingaccount-text" style="text-decoration:underline">@Html.DisplayNameFor(model => model.Name)</h5>
                </div>
                <div class="checkingaccount-jumbotron-list">
                    <h5 class="text-uppercase checkingaccount-text" style="text-decoration:underline">@Html.DisplayNameFor(model => model.User.UserName)</h5>
                </div>
                <div class="checkingaccount-jumbotron-list">
                    <h5 class="text-uppercase checkingaccount-text" style="text-decoration:underline">@Html.DisplayNameFor(model => model.User.Email)</h5>
                </div>
                <div class="checkingaccount-jumbotron-list">
                    <h5 class="text-uppercase checkingaccount-text" style="text-decoration:underline">Locked</h5>
                </div>
            </div>
            <hr />
            @foreach (var item in Model)
            {
                <div class="row site-border-normal" style="background-color:black; color:white;">
                    <div class="checkingaccount-jumbotron-list">
                        @if (item.User.Pin == null)
                        {
                            <h6 class="checkingaccount-text">@Html.Raw("No Pin")</h6>
                        }
                        else
                        {
                            <h6 class="checkingaccount-text">@Html.DisplayFor(model => item.User.Pin)</h6>
                        }
                    </div>
                    <div class="checkingaccount-jumbotron-list">
                        <h6 class="checkingaccount-text">@Html.DisplayFor(model => item.AccountNumber)</h6>
                    </div>
                    <div class="checkingaccount-jumbotron-list">
                        <h6 class="checkingaccount-text">@Html.DisplayFor(model => item.Name)</h6>
                    </div>
                    <div class="checkingaccount-jumbotron-list">
                        <h6 class="checkingaccount-text">@Html.DisplayFor(model => item.User.UserName)</h6>
                    </div>
                    <div class="checkingaccount-jumbotron-list">
                        <h6 class="checkingaccount-text">@Html.DisplayFor(model => item.User.Email)</h6>
                    </div>
                    <div class="checkingaccount-jumbotron-list">
                        <h6 class="checkingaccount-text">@Html.DisplayFor(model => item.User.LockoutEnabled)</h6>
                    </div>
                </div>
                <hr />
            }
        </div>
    }
</div>