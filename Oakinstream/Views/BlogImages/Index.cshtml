@model IEnumerable<Oakinstream.Models.BlogImage>

@{
    ViewBag.Title = "Blog Images";
}

<div class="container text-center">
    <div class="row">
        <div class="col-md-12  NormalBorder-Bottom">
            <br />
            <h1 class="text-primary"><strong>@ViewBag.Title</strong></h1>
        </div>
    </div>
    <a href="@Url.Action("Index", "Admin")" class="text-primary">Back to admin</a>
    <br />
    <div class="row">
        <div class="btn" style="width:30%;">
            <span class="glyphicon glyphicon-plus"></span>
            <a href="@Url.Action("Upload", "BlogImages")" class="btn btn-success" style="width:50%;">Add a image</a>
        </div>
    </div>
    <hr />

    @{
        var itemcounter = 0;
        foreach (var item in Model)
        {
            itemcounter++;
        }
    }

    @if (itemcounter != 0)
    {
        <div class="jumbotron col-md-12 NormalBorder">
            <h2 class="text-primary">@Html.DisplayNameFor(model => model.First().FileName):</h2>
            <hr />
            @foreach (var item in Model)
            {
                <a class="btn btn-danger " href="@Url.Action("Delete", "BlogImages", new { id = item.ID })" style="cursor:pointer; margin-left:250px;"><span class="glyphicon glyphicon-remove"></span></a>
                <br />
                <img src="@Url.Content(Constants.BlogThumbnailPath+item.FileName)" alt="@item.FileName" title="@item.FileName" />

                <hr />
            }
        </div>
    }
</div>


