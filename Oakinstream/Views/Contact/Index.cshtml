@model Oakinstream.Models.Contact

@{
    ViewBag.Title = "Contact";
}

<div class="container">
    <div class="row text-center">
        <br />
        <div class="col-md-12 NormalBorder-Bottom">
            <h1 class="text-primary"><strong>@ViewBag.Title</strong></h1>
        </div>
        <div class="col-md-12">
            <h2> I'm happy to answer any questions you have! <span class="glyphicon glyphicon-thumbs-up"></span></h2>
            <br />
        </div>
    </div>
    <div class="row">
        <div class="col-md-6 NormalBorder-Right NormalBorder-Top text-center">

            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()

                <div class="form-horizontal">
                    <hr />
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                    <div class="form-group">
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "contact-forms", @placeholder = "Name" } })
                            <br />
                            @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "contact-forms", @placeholder = "Email" } })
                            <br />
                            @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.Subject, new { htmlAttributes = new { @class = "contact-forms", @placeholder = "Subject" } })
                            <br />
                            @Html.ValidationMessageFor(model => model.Subject, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.Message, new { htmlAttributes = new { @class = "contactMessage", @placeholder = "Message", @rows = "5" } })
                            <br />
                            @Html.ValidationMessageFor(model => model.Message, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-md-10">
                            <input type="submit" value="Send" class="btn btn-default" style="width:100%;" />
                        </div>
                    </div>
                    @if (ViewData["Error"] != null)
                    {
                    <div class="form-group">
                        <div class="col-md-10 text-warning">
                            <h3>@ViewData["Error"].ToString()</h3>
                        </div>
                    </div>
                    }
                    @if (TempData["Success"] != null)
                    {
                    <div class="form-group">
                        <div class="col-md-10 text-success">
                            <h3>@TempData["Success"].ToString()</h3>
                        </div>
                    </div>
                    }
                </div>
            }


        </div>
        <div class="col-md-6 text-center NormalBorder-Top">
            <div class="col-md-3 text-right">
                <br />
                <h2><span class="glyphicon glyphicon-user "></span></h2>

                <h2><span class="glyphicon glyphicon-map-marker "></span></h2>

                <h2><span class="glyphicon glyphicon-phone "></span></h2>

                <h2><span class="glyphicon glyphicon-envelope "></span></h2>
            </div>
            <div class="col-md-9 text-center">
                <br />
                <h2>[My Name here]</h2>

                <h2>[My Adress Here]</h2>

                <h2>[My Number Here]</h2>

                <h2>[My Email Here]</h2>
            </div>
        </div>
    </div>
</div>