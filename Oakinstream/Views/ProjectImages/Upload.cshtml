@model Oakinstream.Models.ProjectImage

@{
    ViewBag.Title = "Upload";
}

<div class="container projectimages-container">
    <div class="row projectimages-header">
        <div class="col-md-12">
            <h1 class="text-uppercase"><span class="projectimages-title">@ViewBag.Title</span></h1>
        </div>
        <div class="btn">
            <a class="btn projectimages-btn-back" href="@Url.Action("Index", "ProjectImages")"><span class="glyphicon glyphicon-backward"></span> Back to List</a>
        </div>
    </div>

    @using (Html.BeginForm("Upload", "ProjectImages", FormMethod.Post, new { enctype = "multipart/form-data" }))
    {
        @Html.AntiForgeryToken()

        <div class="jumbotron site-border-normal projectimages-jumbotron">
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })

            <div class="row">
                <div class="col-md-12">
                    <div class="projectimages-jumbotron-text">
                        <h3 class="projectimages-text"><span class="glyphicon glyphicon-picture"></span>  @Html.LabelFor(model => model.FileName):</h3>
                    </div>
                    <div class="projectimages-jumbotron-input">
                        <input type="file" name="files" id="files" multiple="multiple" class="site-form-file btn-default" accept=".png,.jpg,.jpeg,.gif" />
                        @Html.ValidationMessageFor(model => model.FileName, "", new { @class = "text-danger" })
                    </div>
                    <div class="projectimages-jumbotron-submit">
                        <input type="submit" value="Add >>" class="btn btn-default site-form-height" />
                    </div>
                </div>
            </div>
        </div>
    }
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
