@model Oakinstream.Models.Project

@{
    ViewBag.Title = "Delete Project";
}

<div class="container project-CED-container">
    <div class="row project-CED-header">
        <div class="col-md-12">
            <h1 class="text-uppercase"><span class="project-CED-header-title">@ViewBag.Title</span></h1>
        </div>
        <div class="btn">
            <a class="btn site-btn-back" href="@Url.Action("Index", "Projects")"><span class="glyphicon glyphicon-backward"></span> Back to Projects</a>
        </div>
    </div>
    <br />

    <div class="jumbotron site-margin-top-20 site-border-normal project-CED-jumbotron">
        <div class="row">
            <div class="col-md-3">
                <h3 class="text-uppercase project-CED-text" style="text-decoration:underline">@Html.DisplayNameFor(model => model.ID)</h3>
            </div>
            <div class="col-md-3">
                <h3 class="text-uppercase project-CED-text" style="text-decoration:underline">@Html.DisplayNameFor(model => model.Name)</h3>
            </div>
            <div class="col-md-3">
                <h3 class="text-uppercase project-CED-text" style="text-decoration:underline">@Html.DisplayNameFor(model => model.CreatedBy)</h3>
            </div>
            <div class="col-md-3">
                <h3 class="text-uppercase project-CED-text" style="text-decoration:underline">@Html.DisplayNameFor(model => model.CreatedDate)</h3>
            </div>
        </div>
        <hr />

        <div class="row" style="background-color:black; padding:10px;">
            <div class="col-md-3">
                <span class="text-uppercase project-CED-text">@Html.DisplayFor(model => model.ID)</span>
            </div>
            <div class="col-md-3">
                <span class="text-uppercase project-CED-text">@Html.DisplayFor(model => model.Name)</span>
            </div>
            <div class="col-md-3">
                <span class="text-uppercase project-CED-text">@Html.DisplayFor(model => model.CreatedBy)</span>
            </div>
            <div class="col-md-3">
                <span class="text-uppercase project-CED-text">@Html.DisplayFor(model => model.CreatedDate)</span>
            </div>
        </div>
        <hr />

        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-actions no-color">
                <input type="submit" value="Delete" class="btn btn-danger site-btn-delete-big" />
            </div>
        }

    </div>
</div>
