@model IEnumerable<Oakinstream.Models.Contact>

@{
    ViewBag.Title = "Contact Messages";
}

<div class="container text-center">
    <div class="row">
        <div class="col-md-12  NormalBorder-Bottom">
            <br />
            <h1 class="text-primary"><strong>@ViewBag.Title</strong></h1>
        </div>
    </div>
    <a href="@Url.Action("Index", "Admin")" class="text-primary">Back to admin</a>
    <br />
    <hr />

    @{
        var itemcounter = 0;
        foreach (var item in Model)
        {
            itemcounter++;
        }
    }

    @if (itemcounter != 0)
    {
        <div class="jumbotron col-md-12 NormalBorder">

            <h1 class="text-primary">Messages:</h1>
            <hr />

            @foreach (var item in Model)
            {
                <div class="row">
                    <div class="col-md-12 text-center">
                        <h2 class="text-info"><span class="glyphicon glyphicon-user"></span><strong> @Html.DisplayFor(model => item.Name)</strong></h2>
                    </div>
                </div>
                <br />
                <div class="row">
                    <div class="col-md-12 text-center">
                        <h3 class="text-info"><span class="glyphicon glyphicon-envelope"></span> <strong><a href="mailto:@Html.DisplayFor(model => item.Email)" target="_top">@Html.DisplayFor(model => item.Email)</a></strong></h3>
                    </div>
                </div>
                <br />
                <div class="row">
                    <div class="col-md-12">
                        <h3 class="text-info"><strong style="text-decoration:underline">@Html.DisplayFor(model => item.Subject)</strong></h3>
                        <textarea rows="10" cols="60" readonly style="resize:none; text-align:center; max-width:none;">@Html.DisplayFor(model => item.Message)</textarea>
                    </div>
                </div>
                <br />
                <div class="row">
                    <div class="col-md-12">
                        <a class="btn btn-danger " href="@Url.Action("Delete", "BlogImages", new { id = item.ID })" style="cursor:pointer; width:250px;"><span class="glyphicon glyphicon-trash"></span></a>
                    </div>
                </div>
                <hr />
            }
        </div>
     }
</div>