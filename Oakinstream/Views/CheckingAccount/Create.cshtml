@model Oakinstream.Models.CheckingAccount

@{
    ViewBag.Title = "Create";
}

<div class="container checkingaccount-container">
    <div class="row checkingaccount-header">
        <div class="col-md-12">
            <h1 class="text-uppercase"><span class="checkingaccount-title">@ViewBag.Title</span></h1>
        </div>
        <div class="btn">
            <a class="btn checkingaccount-btn-back" href="@Url.Action("List", "CheckingAccount")"><span class="glyphicon glyphicon-backward"></span> Back to list</a>
        </div>
    </div>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

    <div class="jumbotron checkingaccount-jumbotron">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })


        <div class="row">
            <div class="col-md-12">
                <div class="checkingaccount-jumbotron-text text-right">
                    <h4 class="checkingaccount-create-text"><span class="glyphicon glyphicon-user"></span> @Html.LabelFor(model => model.AccountNumber):</h4>
                </div>
                <div class="checkingaccount-jumbotron-input text-left">
                    @Html.EditorFor(model => model.AccountNumber, new { htmlAttributes = new { @class = "site-form" } })
                    @Html.ValidationMessageFor(model => model.AccountNumber, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>
        <br />
        <div class="row">
            <div class="col-md-12">
                <div class="checkingaccount-jumbotron-text text-right">
                    <h4 class="checkingaccount-create-text"><span class="glyphicon glyphicon-user"></span> @Html.LabelFor(model => model.FirstName):</h4>
                </div>
                <div class="checkingaccount-jumbotron-input text-left">
                    @Html.EditorFor(model => model.FirstName, new { htmlAttributes = new { @class = "site-form" } })
                    @Html.ValidationMessageFor(model => model.FirstName, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>
        <br />
        <div class="row">
            <div class="col-md-12">
                <div class="checkingaccount-jumbotron-text text-right">
                    <h4 class="checkingaccount-create-text"><span class="glyphicon glyphicon-user"></span> @Html.LabelFor(model => model.LastName):</h4>
                </div>
                <div class="checkingaccount-jumbotron-input text-left">
                    @Html.EditorFor(model => model.LastName, new { htmlAttributes = new { @class = "site-form" } })
                    @Html.ValidationMessageFor(model => model.LastName, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>
        <br />
        <div class="form-group">
            <div class="col-md-12">
                <input type="submit" value="Create" class="btn btn-success site-btn-create-big" />
            </div>
            <br />
        </div>
    </div>
    }
</div>