@model IEnumerable<Oakinstream.Models.AboutImage>

@{
    ViewBag.Title = "About Images";
}

<h2>@ViewBag.Title</h2>

<p>
    @Html.ActionLink("Create New", "Upload")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.FileName)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            <img src="@Url.Content(Constants.AboutThumbnailPath+item.FileName)" alt="@item.FileName" title="@item.FileName" />
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.FileName)
        </td>
        <td>
            @Html.ActionLink("Delete", "Delete", new { id = item.ID })
        </td>
    </tr>
}

</table>
